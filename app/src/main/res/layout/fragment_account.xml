<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/albedo"
                android:layout_margin="8dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/txtViewProfile"
                android:textAlignment="textEnd"
                android:text="@string/view_profile_fragment_account"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:drawableRight="@drawable/ic_action_arrow_right_white"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/frameLogin"
            android:gravity="right|center"
            android:orientation="horizontal"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtLogin"
                android:textAlignment="textEnd"
                android:text="@string/login_fragment_account"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtPayment"
            android:textSize="18sp"
            android:text="@string/payment_fragment_account"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtOrderHistory"
            android:textSize="18sp"
            android:text="@string/order_history_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtInviteFriends"
            android:textSize="18sp"
            android:text="@string/invite_friends_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtFeedback"
            android:textSize="18sp"
            android:text="@string/feedback_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtSettings"
            android:textSize="18sp"
            android:text="@string/settings_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtHelp"
            android:textSize="18sp"
            android:text="@string/help_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtAbout"
            android:textSize="18sp"
            android:layout_marginTop="1dp"
            android:text="@string/about_fragment_account"
            android:drawableRight="@drawable/ic_action_arrow_right_black"
            android:drawablePadding="5dp"
            android:textColor="@color/colorBlack"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtLogOut"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:text="@string/logout_fragment_account"
            android:drawablePadding="5dp"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtVersionFragmentAccount"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>