<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detail_activity"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:layout_height="?attr/actionBarSize">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageBack"
                    android:gravity="center"
                    android:src="@drawable/ic_action_arrow_left_white"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txtTitle"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/txtDelete"
                    android:textSize="20sp"
                    android:text="Delete"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/imageViewDetail"
            android:src="@drawable/igneel"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <LinearLayout
            android:padding="5dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTenMonAn"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txtGiaBan"
                android:textSize="13sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtMoTa"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/linearLayoutSave"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/imageButtonMinus"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_minus_white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/txtSoLuong"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/custom_amount"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/imageButtonAdd"
                android:layout_gravity="center"
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_action_add_white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/txtTongTien"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnSaveToCart"
                android:textColor="@color/colorWhite"
                android:text="@string/save_to_cart"
                android:layout_gravity="center_vertical"
                android:background="@drawable/custom_background_button_add_cart"
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frameLayoutInfo"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:id="@+id/linearLayoutDelivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="id khach hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="9999"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="ho ten khach hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="pham duy phi"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="sdt khach hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="0988888888"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="hinh thuc don hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="giao hang"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="hinh thuc thanh toan: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="thanh toan khi nhan hang"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="thoi gian giao hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="17:30 - 11/12/2018"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayoutBook"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="so luong: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtSoLuongInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="tong tien: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtTongTienInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Hinh thuc don hang: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtHinhThucDonHang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="hinh thuc thanh toan: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtHinhThucThanhToan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Thoi gian: "
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/txtThoiGianDatBan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/linearLayoutDeliveryAndBook"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDelivery"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:drawableLeft="@drawable/delivery"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:text="@string/delivery"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="1dp" />
        <Button
            android:id="@+id/btnBook"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"
            android:drawableLeft="@drawable/book_table"
            android:textAllCaps="false"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:text="@string/book"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>