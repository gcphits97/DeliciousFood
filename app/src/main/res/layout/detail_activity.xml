<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_detail_activity"
        layout="@layout/toolbar" />
    <ImageView
        android:src="@drawable/igneel"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Ten mon an"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Ten mon an"
            android:textSize="13sp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:text="day la phan mo ta chi tiet"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtSoLuongAdd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:hint="So luong"
            android:layout_marginRight="120dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/btnAddToCart"
            android:textColor="@color/colorWhite"
            android:text="Add to cart"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_add_cart"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewDetail"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </HorizontalScrollView>
</LinearLayout>